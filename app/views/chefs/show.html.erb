<%= render 'shared/page_title', title: "Chef #{ @chef.chefname }'s Profile" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @chef, size: 130 %>
  </div>
</div>

<h4 align= "center"><%= @chef.chefname %>'s Recipes</h4>

<div align = 'center'>
  <%= will_paginate @chef_recipes %>
</div>

<%= render 'recipes/recipe', obj: @chef_recipes %>

<div align = 'center'>
  <%= will_paginate @chef_recipes %> 
</div>

<div class="well col-md-6 col-md-offset-3 center ">
  <%= link_to "All Chefs", chefs_path, class: 'btn  btn-info white'  %>
  <%= link_to "Edit Recipe", edit_recipe_path, class: 'btn btn-warning' %>

</div>
